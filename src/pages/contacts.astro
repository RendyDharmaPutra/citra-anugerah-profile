---
import "../styles/global.css";
import MainLayout from "@/layouts/MainLayout.astro";
import Seo from "@/layouts/Seo.astro";
import { SITE_CONSTANTS } from "@/constants/site.constant";
import Hero from "@/features/contacts/components/Hero.astro";
import ContactsGrid from "@/features/contacts/components/ContactsGrid.astro";
import Location from "@/features/contacts/components/Location.astro";

const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: SITE_CONSTANTS.SITENAME,
  url: SITE_CONSTANTS.URL,
  logo: SITE_CONSTANTS.IMAGE,
  creator: {
    "@type": "Person",
    name: SITE_CONSTANTS.SITENAME,
    jobTitle: "Fashion & Clothing",
  },
};
---

<MainLayout>
  <!-- TODO: Change description -->
  <Seo
    slot="head"
    title="Kontak Kami"
    description="Citra Anugerah"
    type="profile"
    schema={schema}
  />
  <div>
    <Hero />
    <ContactsGrid />
    <Location />
  </div>
</MainLayout>
