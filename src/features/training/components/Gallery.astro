import TrainingCard from "./TrainingCard.astro";

// TODO: DUMMY DATA
const trainingSessions = [
  {
    image: "https://picsum.photos/640/480",
    title: "Pelatihan Ecoprint di SMK Negeri 5 Bandung",
  },
  {
    image: "https://picsum.photos/640/480",
    title: "Workshop Pembuatan Tas Ecoprint – Komunitas UMKM Cirebon",
