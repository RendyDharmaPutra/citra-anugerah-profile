---
import { Button } from "@/components/ui/button";

interface ContactCardProps {
  icon: string;
  title: string;
  description: string;
  primaryAction?: {
    label: string;
    href: string;
    target?: string;
  };
}

const { icon, title, description, primaryAction } = Astro.props;
---

<div
  class="rounded-lg border border-border bg-card p-6 shadow-sm transition-all hover:shadow-md"
>
  <div class="flex items-start gap-4">
    <div class="mt-1 flex-shrink-0 text-2xl text-primary-accent">{icon}</div>
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-foreground">{title}</h3>
      <p class="mt-2 text-sm text-muted-foreground">{description}</p>
      {
        primaryAction && (
          <div class="mt-4">
            <a
              href={primaryAction.href}
              target={primaryAction.target}
              rel="noopener noreferrer"
            >
              <Button size="sm">{primaryAction.label}</Button>
            </a>
          </div>
        )
      }
    </div>
  </div>
</div>
